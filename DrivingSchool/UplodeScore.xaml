<Page
    x:Class="DrivingSchool.UplodeScore"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DrivingSchool"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBox x:Name="IDBox" HorizontalAlignment="Left" Margin="124,226,0,0" Text="" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="43,226,0,0" Text="考生ID：" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox x:Name="ScoreBox" HorizontalAlignment="Left" Margin="124,320,0,0" Text="" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="43,320,0,0" Text="考生成绩：" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button x:Name="ConfirmBtn" Content="确认"  HorizontalAlignment="Left" Margin="104,415,0,0" VerticalAlignment="Top" Click="ConfirmBtn_Click"/>
        <Button x:Name="ResetBtn" Content="重置" HorizontalAlignment="Left" Margin="210,415,0,0" VerticalAlignment="Top" Click="ResetBtn_Click"/>
        <TextBlock x:Name="isExistBlock" Visibility="Collapsed" HorizontalAlignment="Left" Margin="822,217,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:Name="ExamIDBlock" Visibility="Collapsed" HorizontalAlignment="Left" Margin="40,800,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:Name="StateBlock" Visibility="Collapsed"  HorizontalAlignment="Left" Margin="124,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button x:Name="BackButton" Style="{StaticResource NavigationBackButtonNormalStyle}" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="65" Click="BackButton_Click"/>

    </Grid>
</Page>
