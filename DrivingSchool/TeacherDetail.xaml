        <Button x:Name="TimeFourBtn" Content="时段四" HorizontalAlignment="Left" Margin="641,490,0,0" VerticalAlignment="Top" Click="TimeFourBtn_Click"/>
        <Button x:Name="TimeFiveBtn" Content="时段五" HorizontalAlignment="Left" Margin="641,572,0,0" VerticalAlignment="Top" Click="TimeFiveBtn_Click"/>
        <TextBlock x:Name="NameBlock" HorizontalAlignment="Left" Margin="411,294,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <ProgressBar x:Name="MarkBar" HorizontalAlignment="Left" Height="28" Margin="399,389,0,0" VerticalAlignment="Top" Width="98"/>
        <TextBlock x:Name="TchIDBlock" Visibility="Collapsed" HorizontalAlignment="Left" Margin="22,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:Name="IDBlock" Visibility="Collapsed" HorizontalAlignment="Left" Margin="22,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:Name="ProgressBlock" Visibility="Collapsed" HorizontalAlignment="Left" Margin="22,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:Name="HistoryBlock" HorizontalAlignment="Left" Margin="434,442,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:Name="TchProgressBlock" Visibility="Collapsed" HorizontalAlignment="Left" Margin="22,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>

    </Grid>
</Page>
