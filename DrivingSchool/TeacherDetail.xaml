    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:Name="TimeOneBtn" Content="时段一" HorizontalAlignment="Left" Margin="641,276,0,0" VerticalAlignment="Top" Click="TimeOneBtn_Click"/>
        <Button x:Name="TimeTwoBtn" Content="时段二" HorizontalAlignment="Left" Margin="641,345,0,0" VerticalAlignment="Top" Click="TimeTwoBtn_Click"/>
